<h3 class="text-center text-info">Categorias</h3>
<div class="row mb-2">
    <div class="col-12">
        <div class="float-right">
            <a class="btn btn-primary" href="/categoria/cadastro"> Nova Categoria</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th class="coluna-codigo">Codigo</th>
            <th class="coluna-nome-categoria">Nome da Categoria</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Models.Categoria categoria in ViewBag.Categorias)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.NomeCategoria</td>
                <td>
                    <a href="/categoria/editar/@categoria.Id" class="text-success mr-2"
                       data-toggle="tooltip"
                       data-placement="top"
                       title="Editar o Registro">Editar</a>
                    <a href="/categoria/delete/@categoria.Id" class="text-danger">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th class="coluna-codigo">Codigo</th>
            <th class="coluna-nome-categoria">Nome da Categoria</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>

